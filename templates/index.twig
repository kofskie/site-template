<!DOCTYPE html>
<html lang="en-US">

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta charset="utf-8" />

    <title></title>

	{# Font awesome CDN #}
    <script src="https://use.fontawesome.com/84732151cb.js"></script>

    <link rel="stylesheet" href="css/styles.css">

	{# Hero carousel CDN #}
   <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">

    <meta name="viewport"
        content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no, viewport-fit=cover" />

	{# Google Fonts	#}
    <link href="https://fonts.googleapis.com/css?family=FONTNAME&display=swap" rel="stylesheet">

    <meta name="referrer" content="origin-when-cross-origin" />
	
	{# TODO: JQuery #}
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
        crossorigin="anonymous"></script>
</head>



<body>
    

	{# Nav menu #}
    <div class="nav">
		<nav class="nav__container">
			<ul class="nav__list">
				<li class="nav__list-item"><a class="nav__link" href="#gallery">Gallery</a></li>
				<li class="nav__list-item"> <a class="nav__link" href="#about">About</a></li>
				<li class="nav__list-item"> <a class="nav__link" href="#contact">Contact</a></li>
				<li class="nav__list-item"> <a class="nav__link" href="#location">Location</a></li>
			</ul>
		</nav>
		
		{# Mobile nav icon #}
		<input type="checkbox" id="nav__mobile-checkbox" class="nav__mobile-checkbox">
		<div class="nav__mobile-bar">
			<label for="nav__mobile-checkbox" class="nav__mobile-menu-button nav__mobile-menu-button--burger">
			<div class="burger-container" onclick="closeAnimation(this)">
				<div class="burger-1"></div>
				<div class="burger-2"></div>
				<div class="burger-3"></div>
			</div>
			</label>
		</div>
    </div>


    <div class="main">
		<div class="hero">    
		</div>

		<div class="anchor anchor--gallery"  id="gallery">
			<h2 class="header header--gallery">Our Work</h2>
		</div>
		
		<div class="section section--gallery">
		</div>	
		
		<div class="anchor anchor--about" id="about">
			<h2 class="header header--about">About</h2>
		</div>
		
		<div class="section section--about">
		</div>
		
		
		<div class="anchor anchor--contact"  id="contact">
			<h2 class="header header--contact">Contact</h2>
		</div>
		
		<div class="section section--contact">
		</div>	
		
		
		<div class="anchor anchor--location" id="location">
			<h2 class="header header--location">Location</h2>
		</div>
		
		<div class="section section--location">
		</div>
	</div>
    
	<div class="footer">Footer Content</div>
	
	{# Scripts #}
	<script>
        function closeAnimation(x) {
        x.classList.toggle("close");
    }
    </script>

    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    <script src="js/app.js"></script>

</body>

</html>